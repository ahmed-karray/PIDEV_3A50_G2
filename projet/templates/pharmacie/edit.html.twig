{# templates/pharmacie/edit.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Modifier une Pharmacie{% endblock %}

{% block body %}
    <h1>Modifier la Pharmacie : {{ pharmacie.nom }}</h1>

    {{ form_start(form) }}
        {{ form_row(form.nom) }}
        {{ form_row(form.adresse) }}
        {{ form_row(form.email) }}
        {{ form_row(form.tel) }}
        {{ form_row(form.type) }}
        {{ form_row(form.ville) }}
        {{ form_row(form.logo) }}

        {# Display the current logo if it exists #}
        {% if logoBase64 %}
            <div class="current-logo">
                <p><strong>Logo actuel :</strong></p>
                <img src="data:image/png;base64,{{ logoBase64 }}" alt="{{ pharmacie.nom }} Logo" style="max-width: 200px;">
            </div>
        {% else %}
            <p>Aucun logo actuel.</p>
        {% endif %}

    {{ form_end(form) }}

    <a href="{{ path('listph') }}" class="btn btn-secondary">Retour Ã  la liste</a>
{% endblock %}