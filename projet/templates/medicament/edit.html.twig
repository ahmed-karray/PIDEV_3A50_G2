    {% extends 'base.html.twig' %}

    {% block title %}Modifier un Médicament{% endblock %}

    {% block body %}
        <h1>Modifier le Médicament : {{ medicament.nom }}</h1>

        {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
            {{ form_row(form.nom) }}
            {{ form_row(form.description) }}
            {{ form_row(form.dosage) }}
            {{ form_row(form.categorie) }}
            {{ form_row(form.quantite) }}
            {{ form_row(form.prix) }}
            {{ form_row(form.imageurl) }}

            {# Display the current image if it exists #}
            {% if imageBase64 %}
                <div class="current-image">
                    <p><strong>Image actuelle :</strong></p>
                    <img src="data:image/png;base64,{{ imageBase64 }}" alt="{{ medicament.nom }}" style="max-width: 200px;">
                </div>
            {% else %}
                <p>Aucune image actuelle.</p>
            {% endif %}

        {{ form_end(form) }}

        <a href="{{ path('listmed', { pharmacieId: medicament.idPharmacie.first.id }) }}" class="btn btn-secondary">Retour à la liste</a>
    {% endblock %}
